<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dip"
    android:background="#000000"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="遠隔監視（リモートモニタリング）"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" >

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="LQI [0-255]"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tvSerial1"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#90ee90"
                            android:scrollbars="vertical"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VCC [mV]"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tvSerial2"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#d3d3d3"
                            android:scrollbars="vertical"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="DI1～DI4"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tvSerial3"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="#ffb6c1"
                            android:scrollbars="vertical"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AI1"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tvSerial4"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#ffa07a"
                        android:scrollbars="vertical"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AI2"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tvSerial5"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#20b2aa"
                        android:scrollbars="vertical"
                        android:singleLine="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AI3"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tvSerial6"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#87cefa"
                        android:scrollbars="vertical"
                        android:singleLine="true"
                        android:enabled="false" />

                </LinearLayout>
                
                                <LinearLayout
                                    android:layout_width="10dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AI4"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tvSerial7"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#9370db"
                        android:scrollbars="vertical"
                        android:singleLine="true"
                        android:enabled="false" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
                
         <View
             android:layout_width="wrap_content"
             android:layout_height="30dp" />
                
            </LinearLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"             
                android:layout_weight="1" >
            </ListView>

        </LinearLayout>


    </LinearLayout>
    


</LinearLayout> 


